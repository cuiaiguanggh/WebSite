                <div class="swiper-slide">
                    <div class="swiper-slide-img-box">
                        <img src="~/Content/images/product/product-7.jpg" alt="Alternate Text" />
                    </div>
                    <strong class="infor">低压配电箱</strong>
                </div>
                
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
